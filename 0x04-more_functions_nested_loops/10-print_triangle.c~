#include "holberton.h"
/**
 * print_triangle - prints a triangle
 * @size: Letter to check
 * Return: Always 0 (Success)
 */
void print_triangle(int size)
{
	int a;
	int b;

	if (size > 0)
	{
		for (a = size; a >= b; a--)
		{
			for (b = a; b <= size; b++)
			{
				_putchar(35);
			}
			_putchar('\n');
		}
	}
	else
	{
		_putchar('\n');
	}
}
