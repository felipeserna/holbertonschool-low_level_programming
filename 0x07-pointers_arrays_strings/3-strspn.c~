#include "holberton.h"
/**
 * _strspn - gets the length (in bytes) of a prefix substring
 * @s: string to check
 * @accept: bytes that determine the initial segment of s
 * Return: number of bytes in the initial segment of s
 */
unsigned int _strspn(char *s, char *accept)
{
	int i;

	for (i = 0; s[i] != '\0'; i++)
	{
		if (s[i] == c)
		{
			break;
		}
	}

	if (s[i] == c)
	{
		return (&s[i]);
	}
	return ('\0');
}
